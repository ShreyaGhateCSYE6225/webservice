{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "source_ami": "ami-033b95fb8079dc481",
        "ssh_username": "ec2-user"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users": ["{{user `prod_id`}}"],
            "ami_description": "Amazon Linux AMI for CSYE 6225"     
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "webservice.zip",
            "destination": "~/"
        },
        {
            "type": "shell",
            "inline": [
                "cd ~",
                "sudo mkdir -p webservice",
                "sudo chmod 755 webservice",
                "sudo unzip webservice.zip -d ~/webservice"
                ]
        },
        {
            "type": "shell",
            "inline": [
                "script.sh"
                ]
        }
    ]
}